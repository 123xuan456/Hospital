<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/text_gray"
        android:layout_gravity="center">
        <include
            layout="@layout/rl_titlebar"
            />
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
            android:background="@color/white_bg"
            android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/bugle"
            />
        <TextView
            android:id="@+id/tv_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="健康快讯"
            android:layout_marginLeft="8dp"
            android:textStyle="bold"
            android:textSize="@dimen/textview_normal"
            android:textColor="@color/text_blue"
            android:layout_gravity="center_vertical"
             />

        <TextView
            android:id="@+id/tv_roll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="云南白药创口贴，一盒只要10元！"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/textview_gray"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>
        <include
            layout="@layout/home_module1"
            />
        <include
            layout="@layout/home_module2"
            />
        <include
            layout="@layout/home_module3"
            />

        <include
            layout="@layout/horizontalscrollview"
            />

    </LinearLayout>
</FrameLayout>
