<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="d.hospital.MainActivity">

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_above="@+id/radioGroup1"
        >

    </FrameLayout>
    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#177CB0"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <RadioButton
            style="@style/MTabStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/slector_radiobutton_1"
            android:drawablePadding="5dp"
            android:text="首页"
            android:checked="true"
            android:id="@+id/tab_one" />
        <RadioButton
            style="@style/MTabStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/slector_radiobutton_2"
            android:drawablePadding="5dp"
            android:text="问诊"
            android:id="@+id/tab_two" />
        <RadioButton
            style="@style/MTabStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/slector_radiobutton_3"
            android:drawablePadding="5dp"
            android:text="健康商城"
            android:id="@+id/tab_three" />

        <RadioButton
            style="@style/MTabStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/slector_radiobutton_4"
            android:drawablePadding="5dp"
            android:text="消息"
            android:id="@+id/tab_four1" />


        <RadioButton
            style="@style/MTabStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/slector_radiobutton_5"
            android:drawablePadding="5dp"
            android:text="健康圈"
            android:id="@+id/tab_five" />
    </RadioGroup>



</RelativeLayout>
