<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bg_height"
    android:background="@color/title_bg"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/iv_scan"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:padding="10dp"
        android:src="@mipmap/scan"
        android:layout_gravity="center_vertical"
        android:visibility="visible"
         />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@mipmap/seek_bk"
        android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/hunt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:src="@mipmap/hunt"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/tv_hunt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:hint="搜疾病、药品、医生、科室"
            android:textSize="@dimen/textview_normal"
            android:background="@null"
            android:textColor="@color/text_gray"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/hunt" />
    </RelativeLayout>
    
    <ImageView
        android:id="@+id/iv_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="16dp"
        android:src="@mipmap/user"
        android:layout_gravity="center_vertical"/>
</LinearLayout>
