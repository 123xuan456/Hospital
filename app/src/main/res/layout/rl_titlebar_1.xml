<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bg_height"
    android:background="@color/title_bg"
    >

    <TextView
        android:id="@+id/iv_scan"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:text="健康头条"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:gravity="center"
         />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@mipmap/seek_bk"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/iv_scan">
        <ImageView
            android:id="@+id/hunt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:src="@mipmap/hunt"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/tv_hunt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:hint="搜索健康资讯"
            android:textSize="@dimen/textview_normal"
            android:background="@null"
            android:textColor="@color/text_gray"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/hunt" />
    </RelativeLayout>
    

</RelativeLayout>
